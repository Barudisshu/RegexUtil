<?xml version="1.0" encoding="utf-8" ?>
<project name="Lexers" basedir=".">

    <property name="out.dir" value="${basedir}/out"/>

    <macrodef name="flex">
        <attribute name="flexfile"/>
        <attribute name="destdir"/>
        <attribute name="skeleton" default="${basedir}/lexer/idea-flex.skeleton"/>
        <sequential>
            <delete dir="${out.dir}"/>
            <mkdir dir="${out.dir}"/>
            <java classname="JFlex.Main"
                  jvmargs="-Xmx512M"
                  fork="true"
                  failonerror="true">
                <arg value="-sliceandcharat"/>
                <arg value="-skel"/>
                <arg value="@{skeleton}"/>
                <arg value="-d"/>
                <arg value="${out.dir}"/>
                <arg value="@{flexfile}"/>
                <classpath>
                    <pathelement location="${basedir}/lexer/jflex-1.4/lib/JFlex.jar"/>
                </classpath>
            </java>
            <move todir="${basedir}/@{destdir}">
                <fileset dir="${out.dir}">
                    <include name="*.java"/>
                </fileset>
            </move>
            <delete dir="${out.dir}"/>
            <replace dir="${basedir}/@{destdir}" token="zzBufferL.length" value="zzBufferL.length()"/>
            <replace dir="${basedir}/@{destdir}" token="zzBufferL[zzFPos++]" value="zzBufferL.charAt(zzFPos++)"/>
            <replace dir="${basedir}/@{destdir}" token="zzBufferL[--zzFPos]" value="zzBufferL.charAt(--zzFPos)"/>
        </sequential>
    </macrodef>

    <target name="generateRegexpLexer">
        <flex destdir="/src/com/ess/regexutil/gwt/regexEditor/client/lexer"
              flexfile="${basedir}/src/com/ess/regexutil/gwt/regexEditor/client/lexer/regexp-lexer.flex"/>
    </target>

</project>
